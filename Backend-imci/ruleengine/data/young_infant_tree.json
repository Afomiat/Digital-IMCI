      "options": [
        {
          "value": "unable_to_feed",
          "text": "Unable to feed"
        },
        {
          "value": "convulsing_now",
          "text": "Convulsing now or history of convulsions"
        },
        {
          "value": "no_movement",
          "text": "No movement even when stimulated"
        },
        {
          "value": "movement_only_stimulated",
          "text": "Movement only when stimulated"
        },
        {
          "value": "fast_breathing_under_7days",
          "text": "Fast breathing (≥60/min) and infant <7 days old"
        },
        {
          "value": "severe_chest_indrawing",
          "text": "Severe chest indrawing"
        },
        {
          "value": "fever",
          "text": "Fever (≥37.5°C)"
        },
        {
          "value": "low_temp",
          "text": "Low body temperature (<35.5°C)"
        },
        {
          "value": "none_severe",
          "text": "None of the above severe signs"
