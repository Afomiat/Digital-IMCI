{
  "start_node": "check_danger_signs",
  "nodes": {
    "check_danger_signs": {
      "id": "check_danger_signs",
      "type": "multiple_choice",
      "question": "Check for General Danger Signs:",
      "instruction": "Select ALL that apply. If no danger signs, select ONLY 'No danger signs present'",
      "options": [
        {
          "value": "unable_to_drink",
          "text": "Unable to drink or breastfeed"
        },
        {
          "value": "vomits_everything",
          "text": "Vomits everything"
        },
        {
          "value": "had_convulsions",
          "text": "Had convulsions"
        },
        {
          "value": "lethargic_unconscious", 
          "text": "Lethargic or unconscious"
        },
        {
          "value": "convulsing_now",
          "text": "Convulsing now"
        },
        {
          "value": "none",
          "text": "No danger signs present"
        }
      ],
      "rules": [
        {
          "condition": "any_selected",
          "selected_options": ["unable_to_drink", "vomits_everything", "had_convulsions", "lethargic_unconscious", "convulsing_now"],
          "next_node": "classify_very_severe_disease"
        },
        {
          "condition": "none_selected",
          "selected_options": ["none"],
          "next_node": "ask_about_cough"
        }
      ]
    },

    "classify_very_severe_disease": {
      "id": "classify_very_severe_disease",
      "type": "classification",
      "classification": {
        "color": "PINK",
        "name": "VERY SEVERE DISEASE",
        "treatment_plan": {
          "requires_referral": true,
          "urgency": "IMMEDIATE",
          "pre_referral_treatments": [
            "Give first dose of appropriate antibiotic",
            "Treat to prevent low blood sugar", 
            "Keep child warm",
            "Refer URGENTLY to hospital"
          ]
        }
      }
    },

    "ask_about_cough": {
      "id": "ask_about_cough",
      "type": "yes_no",
      "question": "Does the child have cough or difficult breathing?",
      "rules": [
        {
          "condition": "yes",
          "next_node": "check_respiratory_rate"
        },
        {
          "condition": "no",
          "next_node": "ask_about_diarrhea"
        }
      ]
    },

    "check_respiratory_rate": {
      "id": "check_respiratory_rate",
      "type": "assessment",
      "question": "Count the breaths in one minute:",
      "instruction": "Count when child is calm. Enter the number of breaths per minute",
      "rules": [
        {
          "condition": "above_threshold",
          "thresholds": {"value": 50, "age_months": 12},
          "next_node": "check_chest_indrawing"
        },
        {
          "condition": "above_threshold", 
          "thresholds": {"value": 40, "age_months": 13},
          "next_node": "check_chest_indrawing"
        },
        {
          "condition": "below_threshold",
          "thresholds": {"value": 51, "age_months": 12},
          "next_node": "check_oxygen_saturation"
        },
        {
          "condition": "below_threshold",
          "thresholds": {"value": 41, "age_months": 13},
          "next_node": "check_oxygen_saturation"
        }
      ]
    },

    "check_chest_indrawing": {
      "id": "check_chest_indrawing",
      "type": "yes_no",
      "question": "Is there chest indrawing?",
      "rules": [
        {
          "condition": "yes",
          "next_node": "check_stridor"
        },
        {
          "condition": "no",
          "next_node": "check_oxygen_saturation"
        }
      ]
    },

    "check_stridor": {
      "id": "check_stridor",
      "type": "yes_no", 
      "question": "Is there stridor (harsh noise when breathing in)?",
      "rules": [
        {
          "condition": "yes",
          "next_node": "classify_severe_pneumonia"
        },
        {
          "condition": "no",
          "next_node": "check_oxygen_saturation"
        }
      ]
    },

    "classify_severe_pneumonia": {
      "id": "classify_severe_pneumonia",
      "type": "classification",
      "classification": {
        "color": "PINK",
        "name": "SEVERE PNEUMONIA OR VERY SEVERE DISEASE",
        "treatment_plan": {
          "requires_referral": true,
          "urgency": "IMMEDIATE",
          "pre_referral_treatments": [
            "Give first dose IV/IM Ampicillin and Gentamicin",
            "Give oxygen if available",
            "Keep child warm",
            "Refer URGENTLY to hospital"
          ]
        }
      }
    },

    "check_oxygen_saturation": {
      "id": "check_oxygen_saturation",
      "type": "assessment",
      "question": "What is the oxygen saturation (SpO2)?",
      "instruction": "Use pulse oximeter if available",
      "rules": [
        {
          "condition": "below_threshold",
          "thresholds": {"value": 90},
          "next_node": "classify_severe_pneumonia"
        },
        {
          "condition": "above_threshold", 
          "thresholds": {"value": 89},
          "next_node": "classify_pneumonia_or_no_pneumonia"
        }
      ]
    },

    "classify_pneumonia_or_no_pneumonia": {
      "id": "classify_pneumonia_or_no_pneumonia",
      "type": "multiple_choice",
      "question": "Based on respiratory assessment:",
      "instruction": "Select the appropriate classification",
      "options": [
        {
          "value": "pneumonia",
          "text": "Fast breathing OR chest indrawing present"
        },
        {
          "value": "no_pneumonia",
          "text": "No signs of pneumonia"
        }
      ],
      "rules": [
        {
          "condition": "equals",
          "value": "pneumonia",
          "next_node": "classify_pneumonia"
        },
        {
          "condition": "equals",
          "value": "no_pneumonia",
          "next_node": "classify_no_pneumonia"
        }
      ]
    },

    "classify_pneumonia": {
      "id": "classify_pneumonia",
      "type": "classification",
      "classification": {
        "color": "YELLOW",
        "name": "PNEUMONIA",
        "treatment_plan": {
          "requires_referral": false,
          "drugs": [
            {
              "name": "Amoxicillin",
              "dosage": "based on weight", 
              "duration": "5 days"
            }
          ],
          "follow_up": "2 days"
        }
      }
    },

    "classify_no_pneumonia": {
      "id": "classify_no_pneumonia",
      "type": "classification",
      "classification": {
        "color": "GREEN",
        "name": "NO PNEUMONIA",
        "treatment_plan": {
          "requires_referral": false,
          "instructions": [
            "Soothe throat and relieve cough with safe remedy",
            "Advise when to return immediately",
            "Follow-up in 5 days if not improving"
          ]
        }
      }
    },

    "ask_about_diarrhea": {
      "id": "ask_about_diarrhea",
      "type": "yes_no",
      "question": "Does the child have diarrhea?",
      "rules": [
        {
          "condition": "yes",
          "next_node": "check_diarrhea_duration"
        },
        {
          "condition": "no",
          "next_node": "ask_about_fever"
        }
      ]
    },

    "check_diarrhea_duration": {
      "id": "check_diarrhea_duration",
      "type": "assessment",
      "question": "How many days has the diarrhea lasted?",
      "instruction": "Enter number of days",
      "rules": [
        {
          "condition": "above_threshold",
          "thresholds": {"value": 13},
          "next_node": "classify_persistent_diarrhea"
        },
        {
          "condition": "below_threshold",
          "thresholds": {"value": 14},
          "next_node": "check_dehydration_signs"
        }
      ]
    },

    "classify_persistent_diarrhea": {
      "id": "classify_persistent_diarrhea",
      "type": "classification",
      "classification": {
        "color": "YELLOW",
        "name": "PERSISTENT DIARRHEA",
        "treatment_plan": {
          "requires_referral": false,
          "drugs": [
            {
              "name": "Zinc sulfate",
              "dosage": "based on age",
              "duration": "10-14 days"
            }
          ],
          "instructions": [
            "Give Vitamin A therapeutic dose",
            "Follow feeding recommendations for persistent diarrhea",
            "Follow-up in 5 days"
          ]
        }
      }
    },

    "check_dehydration_signs": {
      "id": "check_dehydration_signs",
      "type": "multiple_choice",
      "question": "Check for Dehydration Signs:",
      "instruction": "Select ALL that apply",
      "options": [
        {
          "value": "sunken_eyes",
          "text": "Sunken eyes"
        },
        {
          "value": "skin_pinch_slow",
          "text": "Skin pinch goes back slowly"
        },
        {
          "value": "skin_pinch_very_slow",
          "text": "Skin pinch goes back very slowly"
        },
        {
          "value": "restless_irritable",
          "text": "Restless or irritable"
        },
        {
          "value": "drinking_eagerly",
          "text": "Drinking eagerly, thirsty"
        },
        {
          "value": "drinking_poorly",
          "text": "Drinking poorly"
        },
        {
          "value": "lethargic_unconscious",
          "text": "Lethargic or unconscious"
        },
        {
          "value": "none",
          "text": "No dehydration signs"
        }
      ],
      "rules": [
        {
          "condition": "any_selected",
          "selected_options": ["skin_pinch_very_slow", "lethargic_unconscious"],
          "next_node": "classify_severe_dehydration"
        },
        {
          "condition": "any_selected",
          "selected_options": ["sunken_eyes", "skin_pinch_slow", "restless_irritable", "drinking_eagerly"],
          "next_node": "classify_some_dehydration"
        },
        {
          "condition": "none_selected",
          "selected_options": ["none"],
          "next_node": "classify_no_dehydration"
        }
      ]
    },

    "classify_severe_dehydration": {
      "id": "classify_severe_dehydration",
      "type": "classification",
      "classification": {
        "color": "PINK",
        "name": "SEVERE DEHYDRATION",
        "treatment_plan": {
          "requires_referral": true,
          "urgency": "IMMEDIATE",
          "pre_referral_treatments": [
            "Give IV fluids immediately (Plan C)",
            "Give ORS if child can drink",
            "Refer URGENTLY to hospital"
          ]
        }
      }
    },

    "classify_some_dehydration": {
      "id": "classify_some_dehydration",
      "type": "classification",
      "classification": {
        "color": "YELLOW",
        "name": "SOME DEHYDRATION",
        "treatment_plan": {
          "requires_referral": false,
          "treatment": "Plan B - ORS for some dehydration",
          "drugs": [
            {
              "name": "Zinc sulfate",
              "dosage": "based on age",
              "duration": "10-14 days"
            }
          ],
          "follow_up": "5 days if not improving"
        }
      }
    },

    "classify_no_dehydration": {
      "id": "classify_no_dehydration",
      "type": "classification",
      "classification": {
        "color": "GREEN",
        "name": "NO DEHYDRATION",
        "treatment_plan": {
          "requires_referral": false,
          "treatment": "Plan A - Home care",
          "drugs": [
            {
              "name": "Zinc sulfate",
              "dosage": "based on age",
              "duration": "10-14 days"
            }
          ],
          "follow_up": "5 days if not improving"
        }
      }
    },

    "ask_about_fever": {
      "id": "ask_about_fever",
      "type": "yes_no",
      "question": "Does the child have fever?",
      "rules": [
        {
          "condition": "yes",
          "next_node": "check_fever_duration"
        },
        {
          "condition": "no",
          "next_node": "ask_about_ear_pain"
        }
      ]
    },

    "check_fever_duration": {
      "id": "check_fever_duration",
      "type": "assessment",
      "question": "How many days has the fever lasted?",
      "instruction": "Enter number of days",
      "rules": [
        {
          "condition": "above_threshold",
          "thresholds": {"value": 6},
          "next_node": "classify_very_severe_fever"
        },
        {
          "condition": "below_threshold",
          "thresholds": {"value": 7},
          "next_node": "check_stiff_neck"
        }
      ]
    },

    "classify_very_severe_fever": {
      "id": "classify_very_severe_fever",
      "type": "classification",
      "classification": {
        "color": "PINK",
        "name": "VERY SEVERE FEBRILE DISEASE",
        "treatment_plan": {
          "requires_referral": true,
          "urgency": "IMMEDIATE",
          "pre_referral_treatments": [
            "Give first dose of appropriate antibiotic",
            "Treat for malaria if in malaria area",
            "Refer URGENTLY to hospital"
          ]
        }
      }
    },

    "check_stiff_neck": {
      "id": "check_stiff_neck",
      "type": "yes_no",
      "question": "Is there stiff neck?",
      "rules": [
        {
          "condition": "yes",
          "next_node": "classify_meningitis"
        },
        {
          "condition": "no",
          "next_node": "check_bulging_fontanelle"
        }
      ]
    },

    "classify_meningitis": {
      "id": "classify_meningitis",
      "type": "classification",
      "classification": {
        "color": "PINK",
        "name": "MENINGITIS",
        "treatment_plan": {
          "requires_referral": true,
          "urgency": "IMMEDIATE",
          "pre_referral_treatments": [
            "Give first dose of appropriate antibiotic",
            "Give anticonvulsant if convulsing",
            "Refer URGENTLY to hospital"
          ]
        }
      }
    },

    "check_bulging_fontanelle": {
      "id": "check_bulging_fontanelle",
      "type": "yes_no",
      "question": "Is the fontanelle bulging?",
      "rules": [
        {
          "condition": "yes",
          "next_node": "classify_meningitis"
        },
        {
          "condition": "no",
          "next_node": "classify_fever_no_malaria_risk"
        }
      ]
    },

    "classify_fever_no_malaria_risk": {
      "id": "classify_fever_no_malaria_risk",
      "type": "classification",
      "classification": {
        "color": "GREEN",
        "name": "FEVER - NO MALARIA RISK",
        "treatment_plan": {
          "requires_referral": false,
          "drugs": [
            {
              "name": "Paracetamol",
              "dosage": "based on weight",
              "duration": "as needed"
            }
          ]
        }
      }
    },

    "ask_about_ear_pain": {
      "id": "ask_about_ear_pain",
      "type": "yes_no",
      "question": "Does the child have ear pain or ear discharge?",
      "rules": [
        {
          "condition": "yes",
          "next_node": "check_ear_discharge_duration"
        },
        {
          "condition": "no",
          "next_node": "check_muac"
        }
      ]
    },

    "check_ear_discharge_duration": {
      "id": "check_ear_discharge_duration",
      "type": "assessment",
      "question": "How many days has the ear discharge lasted?",
      "instruction": "Enter number of days",
      "rules": [
        {
          "condition": "above_threshold",
          "thresholds": {"value": 13},
          "next_node": "classify_chronic_ear_infection"
        },
        {
          "condition": "below_threshold",
          "thresholds": {"value": 14},
          "next_node": "classify_acute_ear_infection"
        }
      ]
    },

    "classify_chronic_ear_infection": {
      "id": "classify_chronic_ear_infection",
      "type": "classification",
      "classification": {
        "color": "YELLOW",
        "name": "CHRONIC EAR INFECTION",
        "treatment_plan": {
          "requires_referral": false,
          "drugs": [
            {
              "name": "Topical antibiotic ear drops",
              "dosage": "as directed",
              "duration": "14 days"
            }
          ],
          "instructions": [
            "Dry ear by wicking",
            "Follow-up in 5 days"
          ]
        }
      }
    },

    "classify_acute_ear_infection": {
      "id": "classify_acute_ear_infection",
      "type": "classification",
      "classification": {
        "color": "YELLOW",
        "name": "ACUTE EAR INFECTION",
        "treatment_plan": {
          "requires_referral": false,
          "drugs": [
            {
              "name": "Amoxicillin",
              "dosage": "based on weight",
              "duration": "5 days"
            },
            {
              "name": "Paracetamol",
              "dosage": "for pain relief",
              "duration": "as needed"
            }
          ],
          "instructions": [
            "Dry ear by wicking",
            "Follow-up in 5 days"
          ]
        }
      }
    },

    "check_muac": {
      "id": "check_muac",
      "type": "assessment",
      "question": "What is the Mid-Upper Arm Circumference (MUAC)?",
      "instruction": "Measure in cm",
      "rules": [
        {
          "condition": "below_threshold",
          "thresholds": {"value": 115},
          "next_node": "classify_severe_acutemalnutrition"
        },
        {
          "condition": "above_threshold",
          "thresholds": {"value": 114},
          "next_node": "check_edema"
        }
      ]
    },

    "classify_severe_acutemalnutrition": {
      "id": "classify_severe_acutemalnutrition",
      "type": "classification",
      "classification": {
        "color": "PINK",
        "name": "SEVERE ACUTE MALNUTRITION",
        "treatment_plan": {
          "requires_referral": true,
          "urgency": "URGENT",
          "pre_referral_treatments": [
            "Give Vitamin A",
            "Give first dose of antibiotic",
            "Treat to prevent low blood sugar",
            "Refer URGENTLY to hospital"
          ]
        }
      }
    },

    "check_edema": {
      "id": "check_edema",
      "type": "yes_no",
      "question": "Is there bilateral pitting edema?",
      "rules": [
        {
          "condition": "yes",
          "next_node": "classify_severe_acutemalnutrition"
        },
        {
          "condition": "no",
          "next_node": "classify_no_malnutrition"
        }
      ]
    },

    "classify_no_malnutrition": {
      "id": "classify_no_malnutrition",
      "type": "classification",
      "classification": {
        "color": "GREEN",
        "name": "NO MALNUTRITION",
        "treatment_plan": {
          "requires_referral": false,
          "instructions": [
            "Assess feeding and advise mother",
            "Praise mother if feeding well"
          ]
        }
      }
    }
  }
}